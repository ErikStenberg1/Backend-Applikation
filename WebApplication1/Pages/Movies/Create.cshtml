@page
@model WebApplication1.Pages.Movies.CreateModel
@{
}
@{
    ViewData["Title"] = "Create Movie";
}
<div class="review">
    <h1>@ViewData["Title"]</h1>

    <form method="post">
        <partial name="_EditForm" for="Movie" />
        <select asp-for="Actor.ID" asp-items="Model.ActorList">
        </select>
        <button type="submit">Create Movie</button>
    </form>
</div>
