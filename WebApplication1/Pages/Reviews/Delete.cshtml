@page "{id:int}"
@model WebApplication1.Pages.Reviews.DeleteModel
@{
    ViewData["Title"] = "Delete Review";
}

<div class="center">
    <h1>@ViewData["Title"]</h1>
    <form method="post">
        <p>Are you sure you want to delete this review?</p>
        <button type="submit">Delete</button>
        <a asp-page="/Movies/Index">Cancel</a>
    </form>
</div>