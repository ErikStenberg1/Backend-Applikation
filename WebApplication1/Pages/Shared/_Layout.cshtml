<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="nav-container">
                <div class="nav-listitems">
                    <ul class="navbar-navbar">
                        <li class="nav-items">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-items">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-items">
                            <a class="nav-link text-dark" asp-page="/Movies/Index">Movies</a>
                        </li>
                        <li class="nav-items">
                            <a class="nav-link text-dark" asp-page="/Actors/Index">Actors</a>
                        </li>
                        <li class="nav-items">
                            <a class="nav-link text-dark" asp-page="/Actors/Collaborations">Collaborations</a>
                        </li>
                    </ul>
                </div>
                    <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="nav-container">
            &copy; 2021 - WebApplication1 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
