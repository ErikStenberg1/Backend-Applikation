@page
@model WebApplication1.Pages.Actors.DeleteModel
@{
    ViewData["Title"] = "Delete Actor";
}

<div class="center">
    <h1>@ViewData["Title"]</h1>
    <form method="post">
        <p>Are you sure you want to delete this actor?</p>
        <button type="submit">Delete</button>
        <a asp-page="/Actors/Index">Cancel</a>
    </form>
</div>
